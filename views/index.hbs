<!DOCTYPE html>
<html>
  <head>
    <title> {{title}} </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1> {{title}} </h1>
    <div>
      <h2>Filters</h2>

      <div>
    <label for="start">Start Date</label>
    <input type='date' name='startdate' id='start'>
    <label for="end">End Date</label>
    <input type='date' name='enddate' id='end'>
    <label for='curr'>Currency</label>
    <select name='currency' id='currency'>
      <option value="USD">USD</option>
      <option value="EUR">EUR</option>
    </select>
    <button id='submit'>Submit</button>
    </div>

    <div>
      <h2>Values</h2>
      <p>Max: <span id='max'></span></p>
      <p>Min: <span id='min'></span></p>
    </div>

    <canvas id='bitcoin-chart' width='400' height='400'></canvas>

  </body>
  {{!-- Axios script --}}
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  {{!-- ChartJS library script --}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
  {{!-- Custom script --}}
  <script src="/javascripts/financial-data.js" charset="utf-8"></script>
</html>
